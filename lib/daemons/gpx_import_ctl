#!/usr/bin/env ruby
require "rubygems"
require "daemons"
require "yaml"
require "erb"

class Hash
  def with_symbols!
    each_key { |key| self[key.to_s.to_sym] = self[key] }
    self
  end
end

options = YAML.safe_load(
  ERB.new(
    IO.read(
      File.dirname(__FILE__) + "/../../config/daemons.yml"
    )
  ).result
).with_symbols!
options[:dir_mode] = options[:dir_mode].to_sym

Daemons.run File.dirname(__FILE__) + "/gpx_import.rb", options
