<%
@name = printable_name @relation, {:type => t('browse.relation.relation')}
@title = t('browse.relation.relation') + ' | ' + @name
%>
<% content_for :head do %>
<%= stylesheet_link_tag 'browse' %>
<% end %>

<% content_for :heading do %>
  <h2><%= @name %></h2>
  <%= render :partial => "navigation" %>

  <%= render :partial => "common_editsummary", :object => @relation %>

  <div class="edit_summary_chunk">(<%= link_to(t('browse.relation.view_history'), :action => "relation_history") %>)</div>

<% end %>
<%= render :partial => "map", :object => @relation %>

<div class='column-1'>
  <%= render :partial => "relation_details", :object => @relation %>
</div>
