    <div class="spinner-border" role="status">
      <span class="visually-hidden"><%= t("browse.start_rjs.loading") %></span>
    </div>
  </div>
  <div class="mx-n3">
    <ul class="query-results-list list-group list-group-flush"></ul>
  </div>
</div>

