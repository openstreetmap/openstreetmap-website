<% set_title(t(".title")) %>

<%= render "sidebar_header", :title => t(".title") %>

<div>
  <p><%= t(".introduction") %></p>
</div>

<div id="query-nearby" class="query-results">
  <h3><%= t(".nearby") %></h3>
