<% content_for :auto_discovery_link_tag do -%>
  <% unless params[:friends] or params[:nearby] -%>
    <%= auto_discovery_link_tag :atom, @params.to_h.merge(:before => nil, :xhr => nil, :action => :feed) %>
  <% end -%>
<% end -%>

<% set_title(changeset_index_title(params, current_user))
   @heading = if params[:display_name]
                t("changesets.index.title_user_link_html", :user_link => link_to(params[:display_name], user_path(params[:display_name])))
              else
                @title
              end %>

<%= render "sidebar_header", :title => @heading %>

<div class="accordion accordion-flush mx-n3" id="accordionExample">
  <div class="accordion-item">
    <div class="d-flex justify-content-end mt-n3 border-end invisible">
      <button class="accordion-button collapsed w-auto m-2 p-1 visible" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne"></button>
    </div>
    <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
      <div class="accordion-body p-3">
        <input class="form-control" type="date">
      </div>
    </div>
  </div>
</div>

<div class="changesets mx-n3">
  <div class="text-center">
    <div class="spinner-border" role="status">
      <span class="visually-hidden"><%= t("browse.start_rjs.loading") %></span>
    </div>
  </div>
</div>
