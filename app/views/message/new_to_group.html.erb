<% content_for :heading do %>
  <h2><%= raw(t'message.new.send_message_to_entire_group', :title => link_to(h(@group.title), group_path(@group))) %></h2>
<% end %>

<%= error_messages_for 'message' %>

<%= form_for :message, :html => { :class => 'standard-form' }, :url => { :action => "new_to_group", :group_id => @group.id }, :method => :post do |f| %>
  <fieldset>
    <div class='form-row'>
      <label class="standard-label"><%= t'message.new.subject' %></label>
      <%= f.text_field :title, :size => 60, :value => @subject %>
    </div>
    <div class='form-row'>
      <label class="standard-label"><%= t'message.new.body' %></label>
      <%= richtext_area :message, :body, :cols => 80, :value => @body %>
    </div>
    <div class='buttons'>
      <%= submit_tag t('message.new.send_button') %>
      <%= link_to t('message.new.back'), { :controller => 'message', :action => 'inbox', :display_name => @user.display_name }, :class => 'deemphasize button' %>
    </div>
  </fieldset>
<% end %>
