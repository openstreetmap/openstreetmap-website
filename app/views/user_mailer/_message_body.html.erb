<table style="font-size: 15px; margin: 15px 0px; background-color: #eee; width: 100%">
  <tr>
    <td style="width: 50px; min-width: 50px; vertical-align: top; padding: 15px">
      <%= link_to(
            image_tag(
              attachments[@avatar].url,
              :alt => @author,
              :title => @author,
              :width => 50,
              :height => 50,
              :border => 0
            ),
            user_url(@author),
            :target => "_blank", :rel => "noopener"
          ) %>
    </td>
    <td dir="auto" style="text-align: <%= style_left %>; vertical-align: top; padding-<%= style_right %>: 10px; width: 100%">
      <%= body %>
    </td>
  </tr>
</table>
