<% content_for :heading do %>
  <h1><%= t '.title' %></h1>
<% end %>

<%= form_for @client_application, :url => oauth_client_path(@client_application.user.display_name, @client_application), :html => { :method => :put } do |f| %>
  <%= render :partial => "form", :locals => { :f => f } %>
  <%= submit_tag t '.submit' %>
<% end %>
