<%
if @user.home_lat.nil? or @user.home_lon.nil?
  lon = h(params['lon'] || '0') 
  lat = h(params['lat'] || '20') 
  zoom = h(params['zoom'] || '1') 
else 
  marker = true
  mlon = @user.home_lon 
  mlat = @user.home_lat
  lon =  @user.home_lon 
  lat =  @user.home_lat 
  zoom =  '12'
end
