<% @this_user ||= contact_mini %>
<% contact = contact_mini %>
<%
   user_data = {
     :lon => contact.home_lon,
     :lat => contact.home_lat,
     :icon => image_path(type == "friend" ? "marker-blue.png" : "marker-green.png"),
     :description => render(:partial => "user/popup", :object => contact, :locals => {:type => type})
   }
%>
<%= content_tag :span, :data => {:user => user_data} do %>
  <%= link_to user_image(contact, {:class => " ", :alt => contact.display_name}) , :controller => 'user', :action => 'view',  :display_name => contact.display_name %>
<% end %>
